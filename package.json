{
  "name": "moltpit",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts"
  ],
  "scripts": {
    "dev": "npm run dev:api & npm run dev:web",
    "dev:api": "npm run dev --workspace=@moltpit/api",
    "dev:web": "npm run dev --workspace=@moltpit/web",
    "build": "npm run build --workspaces --if-present",
    "build:cli": "npm run build --workspace=moltpit-cli",
    "test": "npm run test --workspaces --if-present",
    "contracts:compile": "npm run compile --workspace=@moltpit/contracts",
    "contracts:test": "npm run test --workspace=@moltpit/contracts",
    "contracts:deploy": "npm run deploy --workspace=@moltpit/contracts",
    "cli": "npm run dev --workspace=moltpit-cli && node packages/moltpit-cli/dist/cli.js"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
